%div#wrapper
  %div#nav
    - if user_signed_in?
      %p.nav
        logged in as
        = succeed "." do
          %strong
            \#{current_user.email}
        = link_to 'Edit account', edit_user_registration_path, :class => 'navbar-link nav'
        |
        \#{link_to "Logout", destroy_user_session_path, method: :delete, :class => 'navbar-link'}
    - else
      = link_to "Sign up", new_user_registration_path, :class => 'navbar-link nav'
      |
      \#{link_to "Login", new_user_session_path, :class => 'navbar-link nav'}

    - if user_signed_in? && !current_user.teetimes.nil?
      =link_to "Add a Teetime", new_teetime_path, :class => 'button large' 
      =link_to "View All Available Teetimes", '/teetimes/all', :class => 'button large'
      =link_to "View Your Profile", usersteetime_path(@user), :class => 'button large' 
      =link_to(image_tag('facebook.jpg'), "https://www.facebook.com/needafourth", :class => "facebook2")
      =link_to(image_tag('twitter.png'), "https://www.twitter.com/needafourth", :class => "twitter2")
    - else
      %br
      =link_to "View All Available Teetimes", teetimes_all_path, :class => 'button large', :id => "teetimes"
      %span.icons
        =link_to(image_tag('facebook.jpg'), "https://www.facebook.com/needafourth", :class => "facebook")
        =link_to(image_tag('twitter.png'), "https://www.twitter.com/needafourth", :class => "twitter")

  %div#logo
    = image_tag "golf.jpg"
