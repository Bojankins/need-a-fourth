      .alert-box.success{ "data-alert" => "" }
        = notice
        %a.close{ href: "#" } &times;
    - if alert.present?
      .alert-box.alert{ "data-alert" => "" }
        = alert
    /     %a.close{ href: "#" } &times;
    / - if notice
    /   %p.alert.alert-success= notice
    / - if alert
    /   %p.alert.alert-danger= alert
    %p.navbar-text.pull-right
    / - if user_signed_in?
